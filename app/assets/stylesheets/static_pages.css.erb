/* Homepage Banner */
.banner.row-fluid {
	background: url(<%= asset_path 'header_bg.png' %>) no-repeat 0 0px transparent;
	width: 1024px;
	height: 333px;
	margin: 0px;
	padding: 0;
	position: relative; }
.banner h1 {
	color: #FFF;
	font-size: 4em;
	font-weight: lighter;
    line-height: 50px;
	margin: 0;
	position: absolute;
	top: 65px;
	left: 95px; }
.banner p {
    color: #FFF;
    font-size: 16px;
    font-weight: lighter;
    line-height: 1.25;
    margin: 0px;
    position: absolute;
    top: 180px;
    left: 95px; }
.banner strong {
	font-weight: normal;
}
.banner h1, .banner p {
	width: 410px;
}

.banner-content {
    background: rgba(0, 43, 18, 0.66);
    width: 450px;
    height: 200px;
    margin: 50px 75px;
}
.banner a.btn {
	position: absolute;
	right: 310px;
	bottom: 85px; }
/* Homepage Buckets */
.buckets-header.row-fluid {
	clear: both;
	margin: 0 0 6px;
	padding: 0; }
.buckets.row-fluid {
	margin: 0;
	padding: 0; }
.buckets.row-fluid .span4, .buckets-header.row-fluid .span4 {
	/*width: 33%;
	margin: 0;*/ }
.buckets-header .span4 {
    background: #00401b;
    border: none;
    box-shadow: 0px 6px 0px #002b12;
    height: 54px;
	padding: 8px 0; }
.buckets .span4 {
	height: 270px;
	padding: 10px 20px; }
.buckets .span4:first-child {
	border-left: none;
	border-right: none;
	padding-left: 32px; 
}
.buckets-header h2 {
	border-left: none;
    color: #FFFFFF;
    font-size: 24px;
    font-weight: lighter;
    line-height: 40px;
	height: 40px;
	margin: 0;
	padding: 0px;
	position: relative;
    text-align: left;
	overflow: hidden;
}
.buckets-header i {
    color: #FFF;
    font-size: 32px;
    padding: 0px 35px;
    text-align: right;
    float: left;
    line-height: 40px;
}
.buckets-header .span4:first-child {
	padding-left: 12px; }
.buckets-header .span4:first-child h2 {
	background-position: 20px 0;
	border-left: none;
}
.buckets-header h2 .icon {
	top: 2px;
	left: 20px; }

.buckets .span4 {
    background: #EEF6F5 none repeat scroll 0% 0%;
}
.buckets p {
	font-size: 1.167em;
	margin: 10px 0px 20px 0px; }
.buckets ul {
	margin: 0;
}
.buckets li {
	padding-left: 0.8em;
	list-style: none;
	color: #516935;
	background: url(<%= asset_path 'double_right_quote.png' %>) no-repeat 0 0.4em;
}
.buckets .span4 a {
    color: #008035;
}
.buckets .dmp_tool_news .scrollbox {
	border: 1px solid #B6B6B7;
	border-radius: 4px;
	-moz-border-radius: 4px;
	-webkit-border-radius: 4px;
	overflow: hidden; }
.buckets .dmp_tool_news ul li {
	margin-bottom: 8px; }
.buckets a {
	font-weight: lighter; }
.buckets a.btn {
	position: absolute;
	bottom: 25px;
	margin-left: 90px;
    transition: 0.5s;
}
	
/* Static Pages */
.static-page {
	margin: 20px 35px;
	font-size: 1.2em; }
.static-page a {
	text-decoration: underline; }
.static-page ul, .static-page ol {
	margin-top: 20px;
	margin-bottom: 20px; }
.static-page ul li {
	list-style: disc;
}
.static-page ul li li {
	list-style: circle;
}
.static-page ol ul > li {
	list-style: disc; }

/* Video */
.embedded-video {
	width: 800px;
	margin: 50px 77px; }
	
/* Contact */
.contact .pull-right {
	margin-right: 85px; }
